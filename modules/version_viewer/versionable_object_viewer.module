/**
 * Implements hook_CMODEL_islandora_view_object().
 */
function versionable_object_viewer_islandora_versionCModel_islandora_view_object(AbstractObject $object) {
  $module_path = drupal_get_path('module', 'versionable_object_viewer');
  module_load_include('inc', 'islandora_image_annotation', 'includes/callbacks');

  //islandora%3A9   ---image for annotations

  drupal_add_css("$module_path/css/viewer.css");
  // Add the jQuery EasyUI library.
  drupal_add_library('versionable_object_viewer', 'jquery_easy_ui');
  //drupal_add_library('versionable_object_viewer', 'jq_latest');


  $versionable_object = islandora_object_load($object->id);
  $version_data = versionable_object_viewer_get_transcription_text($versionable_object);
  dsm($version_data, "vdata");
  $anno_pids = islandora_image_annotation_shared_get_annotation_pids('islandora:9', FALSE);
  dsm($anno_pids, "get anno pids");
  $ret_data = islandora_image_annotation_shared_get_annotation('islandora:96', NULL, FALSE);
  dsm($ret_data, "ret data");
  //drupal_add_library('versionable_object_viewer', 'jq_uilayout');

  // Init script.
  //drupal_add_js("$module_path/js/init.js");

  // Theme our verionable object viewer.
  return theme('versionable_object_viewer', array(
    'islandora_object' => $object,
    'version_data' => $version_data)
  );
}

function versionable_object_viewer_preprocess_versionable_object_viewer(&$variables) {
  module_load_include('inc', 'islandora_image_annotation', 'includes/utils');

  $module_path = drupal_get_path('module', 'versionable_object_viewer');

  $islandora_image_anno_path = drupal_get_path('module', 'islandora_image_annotation');

  $variables['anno_img_pane'] = theme('islandora_anno_image_pane');
  drupal_add_js(array('islandora_image_annotation' => array('PID' => 'islandora:9')), 'setting');

  // This is gross. We cant rely on the image_annotation module to
  // add the required js at the correct time. It needs to be abstracted.
  drupal_add_js($islandora_image_anno_path . '/shared_canvas/js/jquery/jquery-ui-1.8.13.custom.min.js');
  drupal_add_js($islandora_image_anno_path . '/shared_canvas/js/jquery/jquery-1.7.js');


  islandora_image_annotation_include_common_js();
  islandora_image_annotation_include_common_css();

  drupal_add_js($module_path . '/js/islandora_image_annotation_init.js');

  //$versionable_object = islandora_object_load($variables['islandora_object']->id);
  //versionable_object_viewer_get_transcription_text($versionable_object);



}

function versionable_object_viewer_get_transcription_text($object) {
  module_load_include('inc', 'islandora_critical_edition_advanced', 'includes/utilities');

  // Gather all transcriptions for this versionable object.
  $transcriptions_data = islandora_critical_get_related_transcriptions($object->id);
  dsm($transcriptions_data, "trans data");
  $transcriptions = array();
  foreach ($transcriptions_data as $key => $value) {
    $trans = islandora_object_load($key);
    $transcription_details['title'] = $transcriptions_data[$key];
    $transcription_details['text'] = $trans['TRANSCRIPTION']->content;
    array_push($transcriptions, $transcription_details);
  }
  dsm($transcriptions, "transcriptions final array");
  return $transcriptions;
}

